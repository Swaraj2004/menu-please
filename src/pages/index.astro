---
import "../styles/global.css";
import { allRestaurants } from "../data/index";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <title>Menu Please</title>
  </head>
  <body
    class="bg-[#d0e8e4] min-h-screen font-sans text-teal-900 pb-10 antialiased selection:bg-teal-900 selection:text-white"
  >
    <!-- Header -->
    <header class="sticky top-0 z-50 bg-[#d0e8e4]">
      <div
        class="bg-white rounded-b-[2.5rem] px-5 py-8 shadow-sm relative z-50"
      >
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <div>
            <h1 class="text-3xl font-bold tracking-tight text-teal-950">
              Menu Please
            </h1>
            <p class="text-sm text-teal-800/60 mt-1">
              Select a restaurant to view menu
            </p>
          </div>
        </div>
      </div>
    </header>

    <!-- Restaurant List -->
    <main class="px-5 max-w-7xl mx-auto pt-8 pb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {
          allRestaurants.map((restaurant) => (
            <a href={`/${restaurant.slug}`} class="block group">
              <article class="bg-white/70 backdrop-blur-sm border border-white/50 rounded-2xl p-6 hover:bg-white hover:shadow-lg transition-all duration-300 hover:-translate-y-1 h-full cursor-pointer">
                <div class="flex flex-col h-full justify-center">
                  <h2 class="text-2xl font-bold text-teal-950 mb-2 group-hover:text-teal-800 transition-colors">
                    {restaurant.name}
                  </h2>
                  <div class="flex items-center gap-2 mt-auto">
                    <span class="text-xs font-bold uppercase tracking-wider text-teal-900/50 bg-white/60 px-2 py-1 rounded-md">
                      View Menu &rarr;
                    </span>
                  </div>
                </div>
              </article>
            </a>
          ))
        }
      </div>

      <!-- Empty State (just in case) -->
      {
        allRestaurants.length === 0 && (
          <div class="text-center py-20 text-teal-900/50">
            <p>No restaurants available yet.</p>
          </div>
        )
      }
    </main>
  </body>
</html>
